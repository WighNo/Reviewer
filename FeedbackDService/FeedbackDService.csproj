<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\FeedbackDService.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AutoMapper" Version="12.0.1" />
        <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="12.0.0" />
        <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="7.0.2" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.0-preview.1.23111.4">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="8.0.0-preview.1" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\FeedbackDService.Configs\FeedbackDService.Configs.csproj" />
      <ProjectReference Include="..\FeedbackDService.Data.Context\FeedbackDService.Data.Context.csproj" />
      <ProjectReference Include="..\FeedbackDService.Data.Requests\FeedbackDService.Data.Requests.csproj" />
      <ProjectReference Include="..\FeedbackDService.Data.Responses.Errors\FeedbackDService.Data.Responses.Errors.csproj" />
      <ProjectReference Include="..\FeedbackDService.Data.Responses\FeedbackDService.Data.Responses.csproj" />
      <ProjectReference Include="..\FeedbackDService.Services\FeedbackDService.Services.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="wwwroot" />
    </ItemGroup>

</Project>
